<p id="notice"><%= notice %></p>

<h1>Water Cooler</h1>

<h2>Go ahead, add a splash of fun!</h2>

<table>

  <thead>

    <tr>

      <th>Who</th>

      <th>What</th>

      <th>When</th>

      <th colspan="3"></th>

    </tr>

  </thead>


  <tbody>

    <% @messages.each do |message| %>

      <tr>

        <td><%= message.who %></td>

        <td><%= message.what %></td>

        <td><%= message.when %></td>

        <!--<td><%= link_to 'Show', message %></td>-->

        <td><%= link_to 'Edit', edit_message_path(message) %></td>

        <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>

    <% end %>

  </tbody>

</table>

<br>

<%= link_to 'Add a little more chatter', new_message_path %>
